<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

   <portlet>
      <portlet-name>VideoPlayer</portlet-name>
      <display-name xml:lang="EN">Video Player</display-name>
      <portlet-class>org.juzu.portlet.JuzuPortlet</portlet-class>
      <init-param>
         <name>juzu.run_mode</name>
         <value>prod</value>
      </init-param>
      <init-param>
         <name>juzu.inject</name>
         <value>weld</value>
      </init-param>
      <supports>
         <mime-type>text/html</mime-type>
      </supports>
      <portlet-info>
         <title>Video Player</title>
         <keywords>video</keywords>
      </portlet-info>
      <portlet-preferences>
         <preference>
            <name>url</name>
            <value>http://player.vimeo.com/video/11342151</value>
            <read-only>false</read-only>
         </preference>
         <preference>
         		<name>width</name>
            <value>500px</value>
         </preference>
         <preference>
         		<name>height</name>
            <value>500px</value>
         </preference>
      </portlet-preferences>
   </portlet>
</portlet-app>